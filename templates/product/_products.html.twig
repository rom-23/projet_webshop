<div class="card mb-4">
    {% if product.image %}
        <img src="{{ vich_uploader_asset(product, 'imageFile')}}" alt="card-img-top"
             style="width:100%;height:auto;">
    {% else %}
        <img src="{{ 'uploads/images/products/empty.jpg'}}" alt="card-img-top"
             style="width:100%;height:auto;">

    {% endif %}
    <div class="card-body">

        <h5 class="card-title">
            <a href="{{ path('product.show', {id:product.id, slug:product.slug}) }}">{{ product.name }}</a>
        </h5>
        <!-- <p class="card-text">{{ product.description | nl2br }}</p> -->
        <p class="card-text">{{ product.name }}

        <p class="card-text text-primary">{{ product.price }}
            $</p>
        <a href="#" class="btn btn-primary">Read</a>
    </div>
</div>
