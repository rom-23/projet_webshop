    <div class="container pb-5">
            <section>
                <div class="card-deck text-center">
            {% for product in products %}
                <div class="col-12 col-md-4 mb-5">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title text-dark">
                                {{ product.name }}
                            </h5>
                            <p class="card-text">
                                {% if product.image %}
                                    <img class="img-fluid" src="{{ vich_uploader_asset(product, 'imageFile')}}" alt=""
                                         >
                                {% else %}
                                    <img class="img-fluid" src="{{ '/uploads/images/products/empty.jpg'}}" alt=""
                                         >
                                {% endif %}
                            </p>
                            <p class="card-title text-primary">Description</p>
                            <p class="card-text">{{ product.description }}</p>
                            <p class="card-title text-primary">Prix</p>
                            <p class="text-warning" style="font-weight: bold;">{{ product.price | number_format(2,',',' ') }} $</p>
                            <p class="card-title text-primary">Categorie</p>
                            <p class="card-text text-secondary">{{ product.category }}</p>
                            <p class="card-text">on {{ product.createdAt | date('d/m/Y a H:i') }}</p>
                            <a class="btn btn-outline-info" href="{{ path('product.show', {id:product.id, slug:product.slug}) }}">DÃ©tails</a>
                            <a href="{{ path('cart.add',{'id': product.id}) }}" class="btn btn-outline-info">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
